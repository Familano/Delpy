<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menulogindokawl"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <ImageView
            android:id="@+id/ARDok_ImgLogoDelpy"
            android:layout_width="168dp"
            android:layout_height="114dp"
            android:layout_gravity="end"
            android:contentDescription="@string/app_logo"
            app:srcCompat="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/ARDok_TxtDaftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/btn_register"
                android:textColor="#fff"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ARDok_TxtDokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="65dp"
                android:layout_marginTop="30dp"
                android:text="@string/txt_dokter"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ARDok_TxfFullName"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:width="300dp"
                android:background="@drawable/switchdokter"
                android:hint="@string/txt_fullname"
                android:inputType="text"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/ARDok_TxfNPID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:width="300dp"
                android:background="@drawable/switchdokter"
                android:ems="10"
                android:hint="@string/txt_npid"
                android:inputType="number"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/ARDok_TxfEmail"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/switchdokter"
                android:hint="@string/txt_email"
                android:inputType="textEmailAddress"
                android:textColorHint="#fff" />

            <EditText
                android:id="@+id/ARDok_TxfPassword"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/switchdokter"
                android:hint="@string/txt_pw"
                android:inputType="textPassword"
                android:textColorHint="#fff" />

            <Button
                android:id="@+id/ARDok_BtnDaftar"
                android:layout_width="97dp"
                android:layout_height="46dp"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/switchdokter"
                android:text="@string/btn_register"
                android:textColor="#fff" />

        </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>