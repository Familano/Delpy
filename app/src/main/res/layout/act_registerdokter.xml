<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiendok"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/logoDelpy"
        android:layout_width="168dp"
        android:layout_height="114dp"
        android:layout_gravity="right"
        app:srcCompat="@drawable/icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Daftar"
            android:textColor="#fff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDokter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="30dp"
            android:text="Dokter"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txfFullName"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:width="300dp"
            android:background="@drawable/switchdokter"
            android:hint="Nama Lengkap"
            android:inputType="text"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/txfNPID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:width="300dp"
            android:background="@drawable/switchdokter"
            android:ems="10"
            android:hint="NPID"
            android:inputType="number"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/txfEmail"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/switchdokter"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/txfPassword"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/switchdokter"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/btnDaftar"
            android:layout_width="97dp"
            android:layout_height="46dp"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/switchdokter"
            android:text="DAFTAR"
            android:textColor="#fff" />
    </LinearLayout>


</LinearLayout>