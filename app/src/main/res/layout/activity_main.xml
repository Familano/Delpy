<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.maming.delpy.MainActivity">

    <ImageView
        android:id="@+id/logoDelpy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDokter"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/icon"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/btnPasien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txfEmail"
        android:layout_alignStart="@+id/txfEmail"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/switchpasien"
        android:gravity="center_horizontal"
        android:text="Pasien" />

    <Button
        android:id="@+id/btnDokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPasien"
        android:layout_alignBottom="@+id/btnPasien"
        android:layout_marginStart="-3dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/btnPasien"
        android:background="@drawable/switchpasien"
        android:gravity="center_horizontal"
        android:text="Dokter" />

    <EditText
        android:id="@+id/txfEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/txfPassword"
        android:text="Email"
        android:drawableStart="@drawable/ic_action_email" />


    <EditText
        android:id="@+id/txfPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:drawableStart="@drawable/ic_action_pass"
        android:layout_below="@+id/txfEmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:gravity="center_horizontal"
        android:background="@drawable/switchpasien"
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:text="Masuk"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/txfPassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtLupaPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Lupa password?"
        android:textColor="#000000"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:gravity="center_horizontal"
        android:background="@drawable/switchpasien"
        android:id="@+id/btnDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLupaPassword"
        android:layout_marginTop="16dp"
        android:text="Daftar"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin" />


</RelativeLayout>
