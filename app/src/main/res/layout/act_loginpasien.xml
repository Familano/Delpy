<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.maming.delpy.ActLoginPasien">

    <ImageView
        android:contentDescription="Delpy Logo"
        android:id="@+id/ALPas_ImgLogoDelpy"
        android:layout_above="@+id/ALPas_BtnDokter"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/icon" />

    <Button
        android:background="@drawable/switchpasien"
        android:gravity="center_horizontal"
        android:id="@+id/ALPas_BtnPasien"
        android:layout_above="@+id/ALPas_TxfEmail"
        android:layout_alignStart="@+id/ALPas_TxfEmail"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="22dp"
        android:layout_width="wrap_content"
        android:text="Pasien" />

    <Button
        android:background="@drawable/switchpasien"
        android:gravity="center_horizontal"
        android:id="@+id/ALPas_BtnDokter"
        android:layout_alignBaseline="@+id/ALPas_BtnPasien"
        android:layout_alignBottom="@+id/ALPas_BtnPasien"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="-3dp"
        android:layout_toEndOf="@+id/ALPas_BtnPasien"
        android:layout_width="wrap_content"
        android:text="Dokter" />

    <EditText
        android:drawableStart="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Email"
        android:id="@+id/ALPas_TxfEmail"
        android:inputType="textEmailAddress"
        android:layout_alignStart="@+id/ALPas_TxfPassword"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />


    <EditText
        android:drawableStart="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:id="@+id/ALPas_TxfPassword"
        android:inputType="textPassword"
        android:layout_below="@+id/ALPas_TxfEmail"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content" />

    <Button
        android:background="@drawable/switchpasien"
        android:gravity="center_horizontal"
        android:id="@+id/ALPas_BtnLogin"
        android:layout_below="@+id/ALPas_TxfPassword"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:text="Masuk" />

    <TextView
        android:id="@+id/ALPas_TxtLupaPassword"
        android:layout_below="@+id/ALPas_BtnLogin"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:text="Lupa password?"
        android:textColor="#000000" />

    <Button
        android:background="@drawable/switchpasien"
        android:gravity="center_horizontal"
        android:id="@+id/ALPas_BtnDaftar"
        android:layout_alignStart="@+id/ALPas_BtnLogin"
        android:layout_alignEnd="@+id/ALPas_BtnLogin"
        android:layout_below="@+id/ALPas_TxtLupaPassword"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:text="Daftar" />


</RelativeLayout>
