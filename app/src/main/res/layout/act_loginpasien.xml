<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/menuloginpasawl"
    tools:context="com.example.maming.delpy.ActLoginPasien">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ALPas_ImgLogoDelpy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ALPas_BtnPasien"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30dp"
                android:contentDescription="@string/app_logo"
                android:src="@drawable/icon"
                android:textColor="#fff" />

            <Button
                android:id="@+id/ALPas_BtnPasien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ALPas_TxfEmail"
                android:layout_alignStart="@+id/ALPas_TxfEmail"
                android:layout_marginStart="25dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/switchpasien"
                android:gravity="center_horizontal"
                android:text="@string/txt_pasien" />


            <Button
                android:id="@+id/ALPas_BtnDokter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/ALPas_BtnPasien"
                android:layout_alignBottom="@+id/ALPas_BtnPasien"
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@+id/ALPas_BtnPasien"
                android:background="@drawable/switchpasien"
                android:gravity="center_horizontal"
                android:text="@string/txt_dokter" />

            <EditText
                android:id="@+id/ALPas_TxfEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/ALPas_TxfPassword"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:drawableStart="@drawable/ic_action_email"
                android:ems="10"
                android:hint="@string/txt_email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/ALPas_TxfPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ALPas_TxfEmail"
                android:layout_centerHorizontal="true"
                android:drawableStart="@drawable/ic_action_pass"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="@string/txt_pw"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/ALPas_BtnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ALPas_TxfPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="71dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/switchpasien"
                android:gravity="center_horizontal"
                android:text="@string/btn_login" />

            <TextView
                android:id="@+id/ALPas_TxtLupaPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ALPas_BtnLogin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="@string/btn_forgetpw"
                android:textColor="#000000" />

            <Button
                android:id="@+id/ALPas_BtnDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ALPas_TxtLupaPassword"
                android:layout_alignStart="@+id/ALPas_BtnLogin"
                android:layout_alignEnd="@+id/ALPas_BtnLogin"
                android:layout_marginTop="16dp"
                android:background="@drawable/switchpasien"
                android:gravity="center_horizontal"
                android:text="@string/btn_register" />

        </RelativeLayout>
    </ScrollView>

