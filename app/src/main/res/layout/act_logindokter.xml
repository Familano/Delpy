<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiendok"
    tools:context="com.example.maming.delpy.ActLoginPasien">

    <ImageView
        android:id="@+id/logoDelpy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnDokter"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:textColor="#fff"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/btnPasien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txfEmail"
        android:layout_alignStart="@+id/txfEmail"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/switchdokter"
        android:gravity="center_horizontal"
        android:text="Pasien"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnDokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPasien"
        android:layout_alignBottom="@+id/btnPasien"
        android:layout_toEndOf="@+id/btnPasien"
        android:background="@drawable/switchdokter"
        android:gravity="center_horizontal"
        android:text="Dokter"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/txfEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/txfPassword"
        android:text="Email"
        android:textColor="#fff"
        android:drawableLeft="@drawable/ic_action_emaildok" />

    <EditText
        android:id="@+id/txfPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        android:textColor="#fff"
        android:drawableLeft="@drawable/ic_action_passdok"
        android:layout_below="@+id/txfEmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:gravity="center_horizontal"
        android:background="@drawable/switchdokter"
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="71dp"
        android:text="Masuk"
        android:layout_marginTop="25dp"
        android:textColor="#fff"
        android:layout_below="@+id/txfPassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtLupaPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Lupa password?"
        android:textColor="#fff"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:gravity="center_horizontal"
        android:background="@drawable/switchdokter"
        android:id="@+id/btnDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLupaPassword"
        android:layout_marginTop="16dp"
        android:text="Daftar"
        android:layout_alignStart="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin"
        android:textColor="#fff"/>


</RelativeLayout>
