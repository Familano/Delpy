<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiendok"
    tools:context="com.example.maming.delpy.ActLoginPasien">

    <ImageView
        android:id="@+id/ALDok_ImgLogoDelpy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ALDok_BtnDokter"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:textColor="#fff"
        app:srcCompat="@drawable/icon"
        android:contentDescription="Delpy Logo" />

    <Button
        android:id="@+id/ALDok_BtnPasien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ALDok_TxfEmail"
        android:layout_alignStart="@+id/ALDok_TxfEmail"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/switchdokter"
        android:gravity="center_horizontal"
        android:text="Pasien"
        android:textColor="#fff" />

    <Button
        android:id="@+id/ALDok_BtnDokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ALDok_BtnPasien"
        android:layout_alignBottom="@+id/ALDok_BtnPasien"
        android:layout_toEndOf="@+id/ALDok_BtnPasien"
        android:background="@drawable/switchdokter"
        android:gravity="center_horizontal"
        android:text="Dokter"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/ALDok_TxfEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/ALDok_TxfPassword"
        android:hint="Email"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:drawableStart="@drawable/ic_action_emaildok" />

    <EditText
        android:id="@+id/ALDok_TxfPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:drawableStart="@drawable/ic_action_passdok"
        android:layout_below="@+id/ALDok_TxfEmail"
        android:layout_centerHorizontal="true" />

    <Button
        android:gravity="center_horizontal"
        android:background="@drawable/switchdokter"
        android:id="@+id/ALDok_BtnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="71dp"
        android:text="Masuk"
        android:layout_marginTop="25dp"
        android:textColor="#fff"
        android:layout_below="@+id/ALDok_TxfPassword"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ALDok_TxtLupaPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Lupa password?"
        android:textColor="#fff"
        android:layout_below="@+id/ALDok_BtnLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:gravity="center_horizontal"
        android:background="@drawable/switchdokter"
        android:id="@+id/ALDok_BtnDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ALDok_TxtLupaPassword"
        android:layout_marginTop="16dp"
        android:text="Daftar"
        android:layout_alignStart="@+id/ALDok_BtnLogin"
        android:layout_alignEnd="@+id/ALDok_BtnLogin"
        android:textColor="#fff"/>


</RelativeLayout>
